<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PalabrasActivity">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Ordena las palabras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oracionCompleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/fondo"
        android:padding="10sp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/palabra1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oracionCompleta" />

    <TextView
        android:id="@+id/palabra2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/palabra1"
        app:layout_constraintTop_toBottomOf="@+id/palabra1" />

    <TextView
        android:id="@+id/palabra3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/palabra2"
        app:layout_constraintTop_toBottomOf="@+id/palabra2" />

    <TextView
        android:id="@+id/palabra4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/palabra3"
        app:layout_constraintTop_toBottomOf="@+id/palabra3" />

    <TextView
        android:id="@+id/palabra5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/palabra4"
        app:layout_constraintTop_toBottomOf="@+id/palabra4" />

    <TextView
        android:id="@+id/palabra6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/palabra1" />

    <TextView
        android:id="@+id/palabra7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/palabra6"
        app:layout_constraintTop_toBottomOf="@+id/palabra6" />

    <TextView
        android:id="@+id/palabra8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/palabra7"
        app:layout_constraintTop_toBottomOf="@+id/palabra7" />

    <TextView
        android:id="@+id/palabra9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/palabra8"
        app:layout_constraintTop_toBottomOf="@+id/palabra8" />

    <TextView
        android:id="@+id/palabra10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10sp"
        android:textSize="17sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/palabra9"
        app:layout_constraintTop_toBottomOf="@+id/palabra9" />

    <Button
        android:id="@+id/btnTerminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Terminar"
        app:layout_constraintStart_toStartOf="@+id/palabra5"
        app:layout_constraintTop_toBottomOf="@+id/palabra5" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:textColor="#000000"
        android:backgroundTint="#EDEDED"
        app:layout_constraintEnd_toEndOf="@+id/palabra10"
        app:layout_constraintTop_toTopOf="@+id/btnTerminar" />

</androidx.constraintlayout.widget.ConstraintLayout>